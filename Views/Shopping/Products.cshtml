@model IEnumerable<CapstoneShoppingList.Models.Products>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2 font-weight-bold">
                        ID
                    </div>
                    <div class="col-sm-8 font-weight-bold">
                        Name
                    </div>
                    <div class="col-sm-2 font-weight-bold">
                        Price
                    </div>
                </div>
                @foreach (var product in Model)
                {
                    <div class="row">
                        <div class="col-sm-2">
                            @Html.DisplayFor(modelItem => product.Id)
                        </div>
                        <div class="col-sm-8">
                            @Html.DisplayFor(modelItem => product.Name)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(modelItem => product.Price)
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="orderList">Select Your Product</label>
                <select class="form-control" id="orderProduct">
                    @foreach (var product in Model)
                    {
                        <option>@Html.DisplayFor(modelItem => product.Name)</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>